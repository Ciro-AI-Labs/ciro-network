# EditorConfig for CIRO Network
# Ensures consistent coding styles across different editors and IDEs
# https://editorconfig.org/

root = true

# Default settings for all files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Rust files
[*.rs]
indent_size = 4
max_line_length = 100

# Cairo files
[*.cairo]
indent_size = 4
max_line_length = 100

# JavaScript/TypeScript files
[*.{js,mjs,cjs,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# TOML files (Cargo.toml, Scarb.toml, etc.)
[*.toml]
indent_size = 2

# Markdown files
[*.md]
indent_size = 2
trim_trailing_whitespace = false  # Preserve trailing spaces for line breaks

# Configuration files
[*.{xml,svg,html,css,scss}]
indent_size = 2

# Shell scripts
[*.{sh,bash,zsh}]
indent_size = 2

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_size = 2

# Makefile (requires tabs)
[{Makefile,makefile,*.mk}]
indent_style = tab
indent_size = 4

# Package files
[{package.json,*.lock}]
indent_size = 2

# GitHub Actions and workflows
[.github/**/*.{yml,yaml}]
indent_size = 2

# VS Code settings
[*.code-workspace]
indent_size = 2 